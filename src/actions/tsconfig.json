  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "out",
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "target": "es2020",
    "resolveJsonModule": true
  },
  "include": ["**/*"]
}
