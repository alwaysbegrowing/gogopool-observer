{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "out",
    "rootDir": "",
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "target": "es2020",
    "skipLibCheck": true,
  },
  "include": ["**/*"],
  "exclude": ["**/*.spec.ts", "node_modules"],
}
